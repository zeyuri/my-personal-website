{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "amd": true,
    "node": true
  },
  "rules": {
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": 0,
    "react/display-name": 0,
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }]
  },
  "plugins": ["jsx-a11y", "prettier", "react", "import", "react-hooks"]
}
